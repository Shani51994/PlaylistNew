<Window x:Class="PlayListNew.View.showPlaylistSongs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayListNew.View"
        mc:Ignorable="d"
        Title="showPlaylistSongs" Height="450" Width="800">
    <Grid>
        <ScrollViewer Background="Transparent" ScrollViewer.CanContentScroll="False"  ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <!--PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"--> 
            <StackPanel Background="Thistle" ScrollViewer.CanContentScroll="False">
                <TextBlock HorizontalAlignment="Left" Text="playlist songs:"  FontSize="40" FontWeight="Bold" Foreground="BlueViolet" Padding="10"/>
                <!--="{Binding VM_PlaylistName, StringFormat='Here are the songs from the playlist: {0}'}"-->
                <DataGrid ItemsSource="{Binding songList}" x:Name="dataGrid1" AutoGenerateColumns="False" CanUserAddRows="False" Margin="31,58,56.6,0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Song" Width="Auto" Binding="{Binding Path=SongName}" IsReadOnly="True" ></DataGridTextColumn>
             <!--   <DataGridTextColumn Header="Artist" Width="Auto" Binding="{Binding Path=ArtistName}" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="Album" Width="Auto" Binding="{Binding  Path=AlbumName}" IsReadOnly="True"></DataGridTextColumn> -->
              <!-- <DataGridTextColumn Header="Genre" Width ="Auto" IsReadOnly="True" Binding ="{Binding SongArtist.Genre}"/> -->
              <!--  <DataGridTextColumn Header="Duration" Width="Auto" Binding="{Binding Duration}" IsReadOnly="True"></DataGridTextColumn> -->
            </DataGrid.Columns>
        </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
